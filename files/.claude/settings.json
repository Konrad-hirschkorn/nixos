{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(sqlite3 * .tables)",
      "Bash(sqlite3 * .schema)",
      "Bash(sqlite3 * .headers)",
      "Bash(sqlite3 * .mode)",
      "Bash(sqlite3 * SELECT *)",
      "Bash(sqlite3 * PRAGMA *)",
      "Bash(sqlite3 * EXPLAIN *)",
      "Bash(sqlite3 * .dump)",
      "Bash(cargo check:*)",
      "Bash(cargo test)"
    ],
    "deny": [
      "Bash(sqlite3 * INSERT *)",
      "Bash(sqlite3 * UPDATE *)",
      "Bash(sqlite3 * DELETE *)",
      "Bash(sqlite3 * DROP *)",
      "Bash(sqlite3 * CREATE *)",
      "Bash(sqlite3 * ALTER *)",
      "Bash(sqlite3 * REPLACE *)",
      "Bash(sqlite3 * ATTACH *)",
      "Bash(sqlite3 * DETACH *)"
    ],
    "ask": []
  }
}
